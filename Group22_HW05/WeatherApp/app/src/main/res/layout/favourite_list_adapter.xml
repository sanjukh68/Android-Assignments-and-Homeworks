<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="10dp"
        android:background="#dadada">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:id="@+id/favouriteCity"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:gravity="left|center_vertical" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="162dp"
                    android:layout_height="29dp"
                    android:layout_above="@+id/favouriteCity"
                    android:layout_alignRight="@+id/textVilastUpdated"
                    android:layout_alignEnd="@+id/textVilastUpdated"
                    android:id="@+id/favoutiteTemp"
                    android:textColor="@android:color/black"
                    android:layout_alignLeft="@+id/textVilastUpdated"
                    android:layout_alignStart="@+id/textVilastUpdated"
                    android:gravity="left|center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_below="@+id/favouriteCity"
                    android:id="@+id/textVilastUpdated"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="left|center_vertical"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </TableRow>
</LinearLayout>
