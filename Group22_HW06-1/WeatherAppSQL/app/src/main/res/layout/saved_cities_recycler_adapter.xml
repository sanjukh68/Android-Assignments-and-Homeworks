<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="10dp"
        android:background="#dadada">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:id="@+id/favouriteCity"
                android:textColor="@android:color/black"
                android:gravity="left|center_vertical"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="162dp"
                    android:layout_height="29dp"
                    android:layout_above="@+id/favouriteCity"
                    android:layout_alignRight="@+id/lastUpdated"
                    android:layout_alignEnd="@+id/lastUpdated"
                    android:id="@+id/favoutiteTemp"
                    android:textColor="@android:color/black"
                    android:layout_alignLeft="@+id/lastUpdated"
                    android:layout_alignStart="@+id/lastUpdated"
                    android:gravity="left|center_horizontal"
                    android:textAlignment="viewStart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/favouriteCity"
                    android:id="@+id/lastUpdated"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="left|center_vertical"
                    android:textSize="12sp"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/btn_star_big_off"
                android:id="@+id/star" />

        </LinearLayout>

    </TableRow>
</LinearLayout>
