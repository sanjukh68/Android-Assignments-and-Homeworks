<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uncc.studentregistration.DisplayActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/stringIdStudentInfo"
        android:id="@+id/textViewStudentInfo"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewStudentInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stringId_name"
            android:id="@+id/textViewName"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="5" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stringIdEmail"
            android:id="@+id/textViewEmail"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stringIdDepartment"
            android:layout_marginTop="10dp"
            android:id="@+id/textViewDept"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stringIdMoodDisplay"
            android:id="@+id/textViewMood"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:layout_column="0" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageViewName"
            android:layout_row="0"
            android:layout_column="7"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_action_edit" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageViewEmail"
            android:layout_row="1"
            android:layout_column="7"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_action_edit" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageViewDept"
            android:layout_row="2"
            android:layout_column="7"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_action_edit" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageViewMood"
            android:layout_row="3"
            android:layout_column="7"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_action_edit" />

    </GridLayout>
</RelativeLayout>
